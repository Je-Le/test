{
  "version": 1,
  "name": "OSM OpenMapTiles",
  "id": "openmaptiles",
  "center": [
    0,
    0
  ],
  "zoom": 1,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "openmaptiles": {
        "type": "vector",
        "tiles": [
            "http://tile.openstreetmap.org/{z}/{x}/{y}.png"
        ]
      }
  },
  "glyphs": "{fontstack}/{range}.pbf",
  "sprite": "sprite",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "#f2efe9"
      }
    }
  ]
}
